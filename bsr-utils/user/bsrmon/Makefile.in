# variables set by configure
CXX             = g++
OBJECTS         = main.o
TARGET          = bsrmon
CXXFLAGS        = -D_LIN -I. -I../../../bsr-header -Wall

# variables set by configure
sbindir = @sbindir@

# variables meant to be overridden from the make command line
DESTDIR ?= /


all : $(TARGET)
 
$(TARGET) : $(OBJECTS)
	$(CXX) $(CXXFLAGS) -o $@ $^

install:
	install -m 755 bsrmon $(DESTDIR)$(sbindir) ;

uninstall:
	rm -f $(DESTDIR)$(sbindir)/bsrmon

clean :
	rm -f $(TARGET)
	rm -f *.o
